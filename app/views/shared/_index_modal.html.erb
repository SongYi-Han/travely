<div class="modal fade" id="modal-item-id-<%= item.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">


        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <div class="row">
            <div class="col-xs-4">
              <div class="body-left">
                <div class="modal-title"><%= item.name.capitalize %></div>
                <div class="modal-image">
                <%= cl_image_tag item.photo, width: 200, crop: :scale %></div>

              </div>
            </div>
            <div class="col-xs-8">
              <div class="body-right">
                <h4>Detail:</h4>
                <p class="modal-title"><%= item.description %></p>
                <br>
                <h4>Item owner:</h4>
                <p class="modal-title"><%= cl_image_tag item.user.photo, class: "avatar-large" %><%= item.user.first_name %></p>
              </div>
            </div>
        </div>
      </div>

      <div class="modal-footer">
       <% if current_user == item.user %>
        <h3>You own this item</h3>
       <% elsif !item.listings.first.is_available %>
        <h3>Sorry, this is item is already taken</h3>
       <% elsif current_user.requested_already?(item) %>
        <h3>Request Sent.</h3>
        <p>We'll notify you with updates</p>
       <% else %>
        <%= link_to 'I want this!', listing_requests_path(Listing.find_by(item: item)), id:item.id, class: 'btn btn-dander btn-lg', method: :post, remote: true %>
       <% end %>
      </div>
    </div>
  </div>
</div>




