<h1>Enter your itinerary</h1>

<%= form_tag(listings_path, method: "get") do %>
  <%= label_tag( "Please insert the city:") %>
  <%= text_field_tag(:city) %>
  <%= label_tag( "Start date:") %>
  <%= date_field_tag(:start_date) %>
  <%= label_tag( "End date:") %>
  <%= date_field_tag(:end_date) %>

  <%= submit_tag("Search", class: "btn btn-danger") %>

<% end %>
