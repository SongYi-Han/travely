<h1>My Dashboard :) </h1>
  <div class ="box">
    <h2>My Itinerary<h2>
      <% @stops.each do |stop| %>
      <% if !(stop.photo.file.nil?)%>
      <%= cl_image_tag stop.photo, height: 300, width: 400, crop: :fill %>
      <% end %>
      <li><%= stop.city %>  ( <%= stop.start_date %> ~ <%= stop.end_date %> ) </li>
      <% end %>
  </div>

  <div class ="box">
    <h2>Items I shared</h2>
      <% @items.each do |item| %>
      <li><%= item.name %> </li>
      <% end %>
  </div>
  <div class ="box">
    <h2>Received Requests</h2>
      <% @listings.each do |listing| %>

        <% if listing.requests != nil %>
          <% @recieved_requests = listing.requests %>
          <% @recieved_requests.each do |request| %>
            <% if request.status == "pending"%>
                <div class="message">
                  <div class="message-name">
                    <p><%= request.listing.item.name %></p>
                  </div>
                   <div class="message-body">
                    <p><em>Please confirm reservation from <%= request.user.first_name %></em> </p>

                   </div>

                   <%= cl_image_tag request.user.photo, class: "card-user avatar-large" %>

                     <div class="message-status">
                        <%= link_to "Accept", listing_request_path(request.listing.id, request.id, { value: "accepted" }), class: 'btn btn-success', method: :patch %>
                        <%= link_to "Decline", listing_request_path(request.listing.id, request.id, { value: "denied" }), class: 'btn btn-danger', method: :patch %>
                     </div>
                   </div>
              <% elsif request.status == "accepted" %>
                  <div class="">
                  <div class="">
                    <p><%= request.listing.item.name %></p>
                  </div>
                   <div class="">
                    <p><em>You have accepted this request!</em> </p>
                   </div>

                   </div>
              <% elsif request.status == "denied" %>
                  <div class="">
                  <div class="">
                    <p><%= request.listing.item.name %></p>
                  </div>
                   <div class="">
                    <p><em>You have denied this request!</em> </p>
                   </div>
            <% end %>
          <% end %>
        <% end %>
      <%end %>

  </div>

  <div class ="box">
    <h2>Sent Requests</h2>
          <% @requests.each do |request| %>
           <% if request.status == "pending" %>
                <p><%= request.created_at.strftime("%c") %></p>
                <p><em>sent a request to "<%= request.listing.user.first_name %>" </em> </p>
              <% elsif request.status == "accepted" %>
               <p> <%= request.listing.item.user.first_name %> has approved your request! </p>
              <% else %>
               <p> Sorry, your request was denied from "<%= request.listing.item.user.first_name %>". </p>
              <% end %>
          <% end %>
  </div>
