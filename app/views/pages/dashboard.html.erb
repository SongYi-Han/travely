<div class = "container-not-boostrap" style="height: 128vh; margin: 2% 0% 0 10%;">
  <div class = "row">
  <h1 class="dash-title">My Dashboard</h1>
  </div>

 <div class="row">
   <div class="col-xs-4">
      <div class ="col-sx-12">
        <div class="my-itinerary">
          <div class="circle"></div>
          <h2>My Itinerary</h2>
        </div>
          <% @stops.each do |stop| %>
          <div class="stop-cards-dash">
            <div class="circle"></div>
              <div class="stop-card-dashbord">
                <% if !(stop.photo.file.nil?)%>
                <div class="city-adv" style="background: url('<%= cl_image_path stop.photo, height: 60, width: 60, crop: :scale %>')"></div>
                <% end %>
                <p class="stop-city"><strong><%= stop.city %></strong></p>
                <p class="stop-dates">( <%= stop.start_date.strftime("%b %d, %Y") %> ~ <%= stop.end_date.strftime("%b %d, %Y") %> )</p>
              </div>
            </div>
          <% end %>
          <div id="last-circle"></div>
      </div>
    </div>

    <div class="col-xs-8">

      <!-- Tab links -->
      <div class="tab">

        <button class="tablinks" onclick="openCity(event, 'items')"><%= pluralize( "(#{@items.count}) Shared ", 'Item' )%></button>
        <button class="tablinks" onclick="openCity(event, 'receieved')"><%= pluralize( "(#{@offers.count})", 'Offer' )%></button>
        <button class="tablinks" onclick="openCity(event, 'sent')"><%= pluralize( "(#{@requests.count})", 'Resquest')%></button>

      </div>
      <!-- Tab content -->
      <div id="items" class="tabcontent">
        <% @items.each do |item| %>
          <div class="col-xs-4" id="item-<%= item.id %>">
            <div class="card">
              <a data-toggle="modal" data-target="#modal-item-id-<%= item.id %>">
                <div class="card-body">
                  <div class="card-img-top" style="background-image: url('<%= cl_image_path item.photo%>')"></div>
                  <p class="card-text name">
                  <% if item.name.length >= 22 %>
                      <%= item.name.first(22)%>...
                    <% else %>
                      <%= item.name %>
                    <%end%>
                  </p>
                  <% item_cities = item.listings.map {|listing| listing.stop.city.upcase} %>
                  <p class="card-text location"><strong><%= item_cities.join(" - ") %></strong></p>
                  <p class="card-text description"><%= item.description.first(29)%></p>
                  <p class="card-text details"><span><i class="fas fa-info-circle"> Click for Details</i></span></p>
                  <div id="delete-item">
                    <%= link_to 'X', delete_item_path(item.id), class: 'delete', method: :delete, remote: true, data: { confirm: "This will delete all listings for this item. Are you sure you like to delete this item?" } %>
                  </div>
                </div>
              </a>
              <%= render partial: 'shared/index_modal', locals: { item: item } %>
            </div>
          </div>
        <% end %>
      </div>

      <div id="receieved" class="tabcontent">

        <% users_received_requests = current_user.received_requests %>

        <% if users_received_requests.empty? %>
          <h3 style="color:red">There are no received requests</h3>
        <% else %>

          <% users_received_requests.each do |request| %>
            <div class="offers-card">
              <div class="offers-card banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%,
                rgba(0,36,61,0.6) 50%), url('<%= cl_image_path request.listing.stop.photo %>')">
                <div class="banner-content">
                  <h1><%= request.listing.stop.city %></h1>
                    <%= cl_image_tag request.listing.item.user.photo, class: "image-match-avt user-photo-match"%>
                    <%= cl_image_tag request.listing.item.photo, class: "image-match-avt item-photo-match" %>
                </div>
              </div>
              <div class="offers-card-content">
                <div class="offers-card-content description">
                  <span class="text-var"><%= request.user.first_name %></span> 
                  <span class="text">has requested your</span>
                  <span class="text-var"><u><%= request.listing.item.name %></u></span>
                </div>
                <div class="offers-card-content dates">
                  <% city = request.listing.stop.city %><% common_dates =  Listing.intersection_dates(request.listing.stop.start_date, request.listing.stop.end_date, request.user.stops.find_by(city:city).start_date, request.user.stops.find_by(city:city).end_date)%>
                  <span class="text">you will both be in </span>
                  <span class="text-var"><%= request.listing.stop.city %></span> 
                  <span class="text">between<span>
                  <p class="text-var"><%= common_dates[0].strftime("%b %d, %Y") %> ----------------------------- 
                  <%= common_dates[-1].strftime("%b %d, %Y") %></p>
                </div>
                <div class="line"></div>
                <div class="request-card-actions offers-card-content">
                <% if request.status == "pending"%>
                  <%= link_to "Accept", listing_request_path(request.listing.id, request.id, { value: "accepted" }), class: 'btn btn-success', method: :patch, remote: true %>
                  <%= link_to "Decline", listing_request_path(request.listing.id, request.id, { value: "denied" }), class: 'btn btn-danger', method: :patch, remote: true %>
                <% elsif request.status == "accepted" %>
                  <p class="status"><em>You have accepted this request!</em> </p>
                <% elsif request.status == "denied" %>
                  <p class="status"><em>You have denied this request!</em> </p>
                <% end %>
              </div>
              </div>
            </div>
          <% end %>

        <% end %>
      </div>
<!--rough figma outline -->
      <div id="sent" class="tabcontent">
        <div class="">
          <div class="row">
            <% if @requests.empty? %>
            <h3 style="color:red">There are no sent requests</h3>
            <% end %>
          
            <% @requests.each do |request| %>
              <div class="col-xs-4">
                <div class="card-request">
                  <div class="card-request-content header">
                    <p class="title">
                      <%if request.listing.item.name.length >= 20 %>
                        <%= request.listing.item.name.first(20)%>...
                      <% else %> 
                        <%= request.listing.item.name %>
                      <%end%>
                    </p>
                    <%= cl_image_tag request.listing.item.user.photo, class: "user"%>
                    <span class="user-name"> FROM <strong><%= request.listing.item.user.first_name %> <%= request.listing.item.user.last_name %></strong></span>
                  </div>
              
                  <div class="request-card-content-img" style="background-image: url('<%= cl_image_path request.listing.item.photo %>')"></div>
        
                  <div class="request-card-content status">
                    <p class="text">REQUEST STATUS:</p>
                    <span class="request-card-actions">
                      <% if request.status == "pending" %>
                        <p><%= request.created_at.strftime("%c") %></p>
                        <p><em>sent a request to "<%= request.listing.item.user.first_name %>" </em> </p>
                      <% elsif request.status == "accepted" %>
                        <p> <%= request.listing.item.user.first_name %> has approved your request! </p>
                      <% else %>
                        <p> Sorry, your request was denied from "<%= request.listing.item.user.first_name %>". </p>
                      <% end %>
                    </span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

    </div>
 </div>
</div>


<script>
function openCity(evt, tabName) {
    // Declare all variables
    var i, tabcontent, tablinks;

    // Get all elements with class="tabcontent" and hide them
    tabcontent = document.getElementsByClassName("tabcontent");
    for (i = 0; i < tabcontent.length; i++) {
        tabcontent[i].style.display = "none";
    }

    // Get all elements with class="tablinks" and remove the class "active"
    tablinks = document.getElementsByClassName("tablinks");
    for (i = 0; i < tablinks.length; i++) {
        tablinks[i].className = tablinks[i].className.replace(" active", "");
    }

    // Show the current tab, and add an "active" class to the button that opened the tab
    document.getElementById(tabName).style.display = "block";
    evt.currentTarget.className += " active";
}

</script>

