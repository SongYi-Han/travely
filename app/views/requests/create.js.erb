function confirmRequest() {
  <% item_id = @request.listing.item.id %>
  const requestButton = document.querySelector(`a[href='/listings/${<%=item_id%>}/requests']`);
  confirmationElement = `<div id="request-confirmation"><strong>Your request has been successfully sent!</strong></adiv>`
  requestButton.insertAdjacentHTML('beforebegin', confirmationElement);
  requestButton.remove()
}



<% if @request.errors.any? %>
  console.log("error")
<% else %>
  confirmRequest()
<% end %>



